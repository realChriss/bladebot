datasource db {
  provider = "postgres"
  url      = env("PGSQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model application {
  user_id                 String
  msg_id                  String
  discord_user            String?
  roblox_user             String?
  roblox_avatar_url       String?
  roblox_headshot_url     String?
  pending_msg_id          String?
  age                     Int?
  kill                    Int?
  win                     Int?

  @@id([user_id, msg_id])
  @@map("application")
}

model warn_type {
  id             Int          @id @default(autoincrement())
  name           String       @db.VarChar
  description    String?      @db.Text
  created_at     DateTime     @default(now()) @db.Timestamp
  user_warns     user_warn[]

  @@map("warn_type")
}

model user_warn {
  id             Int          @id @default(autoincrement())
  user_id        String       @db.VarChar 
  issuer_id      String       @db.VarChar 
  requirement    Int
  earned         Int
  diff           Int?      
  created_at     DateTime   @default(now()) @db.Timestamp
  warn_type      warn_type  @relation(fields: [warn_type_id], references: [id])
  warn_type_id   Int

  @@index([user_id], name: "idx_user_id")
  @@index([warn_type_id], name: "idx_warn_type")
  @@map("user_warn")
}

model config {
  id              Int @id
  app_open        Boolean?
  send_wlc_msg    Boolean?
}

model application_stats {
  id                Int       @id @default(autoincrement())
  application_id    String    // Reference to original application msg_id
  user_id           String    @db.VarChar
  status            String    @db.VarChar // 'accepted', 'rejected', 'cancelled'
  age               Int?
  kill_count        Int?
  win_count         Int?
  processed_by      String?   @db.VarChar // Staff member who processed the application
  created_at        DateTime  @default(now()) @db.Timestamp
  processed_at      DateTime? @db.Timestamp
  processing_time   Int?      // Time in minutes between creation and processing

  @@index([status], name: "idx_app_status")
  @@index([created_at], name: "idx_created_at")
  @@map("application_stats")
}